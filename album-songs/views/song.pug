doctype html
html
  head
    title #{song.title}
    style.
      body {
        font-family: Arial, sans-serif;
        text-align: center;
        margin: 0;
        padding: 0;
      }
      .demo {
        background: #AECE1D;
        background: -moz-linear-gradient(left, #AECE1D 0%, #1C6EA4 60%, #C50000 100%);
        background: -webkit-linear-gradient(left, #AECE1D 0%, #1C6EA4 60%, #C50000 100%);
        background: linear-gradient(to right, #AECE1D 0%, #1C6EA4 60%, #C50000 100%);
        padding: 20px;
      }
      h1 {
        margin-top: 20px;
      }
      p {
        margin-bottom: 10px;
      }
      img {
        display: block;
        margin: 20px auto;
        max-width: 80%;
        height: auto;
      }
      a {
        text-decoration: none;
        color: #333;
      }
      a:hover {
        color: #666;
      }

  body
      h1 #{song.title}
      .demo
        p Autore: #{song.author}
        p Testo: #{song.lyrics}
        img(src=`./immagini/${song.thumbnail}`)
      br
      a(href="/") Indietro